
@{
    ViewData["Title"] = "Clients";
}

<div class="page-title">
    <div class="title_left">
        <h3>Clients</h3>
    </div>
    <div class="title_right">

    </div>
</div>
<div class="clearfix"></div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Clients</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_title">
                <div class="row">
                    <div class="col-lg-12">
                        <div id="table-control-panel" class="pull-left">

                        </div>
                        <div class="pull-right">
                            <button class="btn btn-sm btn-outline btn-primary" id="btn-data-reload"
                                    data-toggle="tooltip" data-placement="bottom" title="refresh table">
                                <i class="fa fa-2x fa-refresh"></i>
                                <span class="btn-icon-text">refresh</span>
                            </button>
                            <button class="btn btn-sm btn-outline btn-primary" id="btn-new-entry-modal"
                                    data-toggle="tooltip" data-placement="bottom" title="new entry">
                                <i class="fa fa-2x fa-plus-circle"></i>
                                <span class="btn-icon-text">&nbsp; new &nbsp;</span>
                            </button>
                            <button class="btn btn-sm btn-outline btn-warning" id="btn-update-entry-modal"
                                    data-toggle="tooltip" data-placement="bottom" title="update entry">
                                <i class="fa fa-2x fa-edit"></i>
                                <span class="btn-icon-text">update</span>
                            </button>
                            <a href="" class="btn btn-sm btn-outline btn-info disabled" id="btn-details-view"
                               data-toggle="tooltip" data-placement="bottom" title="details view">
                                <i class="fa fa-2x fa-expand"></i>
                                <span class="btn-icon-text">details</span>
                            </a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="x_content">
                <div id="list-view-partial-container">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="dataTable_wrapper">
                                <table class="table table-striped table-bordered table-hover" id="clients-dataTable">
                                    <thead>
                                        <tr>
                                            <th>Client Id</th>
                                            <th>Client Name</th>
                                            <th>Enabled</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input id="dataurl" type="hidden" value="@Url.Action("GetClientsData", "ManageClients")">
<input id="newentryurl" type="hidden" value="@Url.Action("AddClient", "ManageClients")">


@section Scripts
    {

    <script src="~/viewscripts/manageclients/clientsdatatable.js"></script>

    <script src="~/viewscripts/manageclients/newentrymodal.js"></script>
}

